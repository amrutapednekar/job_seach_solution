<h1>Sign Up</h1>
<% if @user.errors.any?%>
<% @user.errors.full_messages.each do |error_message| %>
  <%= error_message if @user.errors.full_messages.first == error_message %> <br />
<% end %>
<% end %>


<%= form_for @user do |f|%>
  <%= f.label :email%><br>
  <%= f.text_field :email%><br>
  <%= f.label :password%><br>
  <%= f.password_field :password%><br>
  <%= f.submit %>
<%end%>